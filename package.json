{
  "name": "cronflow",
  "version": "0.11.4",
  "private": false,
  "description": "The Fastest Code-First Workflow Automation Engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "import": "./dist/sdk/index.js",
      "require": "./dist/sdk/index.js"
    }
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/sdk/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "napi": {
    "binaryName": "core",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "aarch64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "optionalDependencies": {
    "@cronflow/darwin-x64": "0.10.1",
    "@cronflow/darwin-arm64": "0.10.1",
    "@cronflow/linux-x64-gnu": "0.10.1",
    "@cronflow/linux-x64-musl": "0.10.1",
    "@cronflow/linux-arm64-gnu": "0.10.1",
    "@cronflow/win32-x64-msvc": "0.10.1",
    "@cronflow/win32-arm64-msvc": "0.10.1"
  },
  "scripts": {
    "build": "rm -rf dist && bun build src/index.ts --outdir dist --target node --format cjs --minify --sourcemap --external \"*.node\" && bun build sdk/index.ts --outdir dist/sdk --target node --format cjs --minify --sourcemap --external \"*.node\" && bun run generate:types",
    "build:dev": "rm -rf dist && bun build src/index.ts --outdir dist --target node --format cjs --sourcemap --external \"*.node\" && bun build sdk/index.ts --outdir dist/sdk --target node --format cjs --sourcemap --external \"*.node\" && bun run generate:types",
    "build:prod": "rm -rf dist && bun build src/index.ts --outdir dist --target node --format cjs --minify --external \"*.node\" && bun build sdk/index.ts --outdir dist/sdk --target node --format cjs --minify --external \"*.node\" && bun run generate:types",
    "build:analyze": "bun run build:prod && bun run scripts/analyze-bundle.js",
    "build:core": "cd core && napi build --release",
    "build:core:debug": "cd core && napi build",
    "build:core:optimized": "cd core && napi build --release && strip core.node && echo 'âœ… Core binary optimized and stripped'",
    "build:core:all": "cd core && napi build --platform --release",
    "install:core": "node scripts/install-core-local.js",
    "install:core:debug": "node scripts/install-core-local.js --debug",
    "artifacts": "cd core && napi artifacts",
    "prepublish:artifacts": "cd core && napi prepublish -t npm",
    "generate:types": "node scripts/generate-types.js",
    "prepublishOnly": "bun run build:prod && bun test && bun run check:bundle-size",
    "postpublish": "bun run clean",
    "pack": "bun run build:prod && npm pack",
    "pack:dev": "bun run build:dev && npm pack",
    "analyze": "bundle-analyzer dist/**/*.js",
    "analyze:size": "du -sh dist/ && find dist/ -name '*.js' -exec wc -c {} + | tail -1",
    "size:check": "bun run build:prod && bun run analyze:size",
    "check:bundle-size": "node scripts/check-bundle-size.js",
    "test": "bun test",
    "test:run": "bun test --run",
    "test:ui": "bun test --ui",
    "test:coverage": "bun test --coverage",
    "test:package": "bun run scripts/test-package.js",
    "test:napi": "bun run tests/napi/bridge-test.js",
    "lint": "eslint src/**/*.ts sdk/**/*.ts",
    "lint:fix": "eslint src/**/*.ts sdk/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "bun --watch src/index.ts",
    "dev:test": "bun test --watch",
    "dev:build": "bun run build:dev --watch",
    "clean": "rm -rf dist node_modules packages core/core.node",
    "clean:all": "rm -rf dist node_modules packages core/core.node bun.lockb",
    "install:all": "bun install && bun run build:core && bun run build:prod",
    "install:dev": "bun install --dev",
    "add": "bun add",
    "add:dev": "bun add --dev",
    "remove": "bun remove",
    "audit": "bun audit",
    "outdated": "bun outdated",
    "update": "bun update",
    "release": "bunx changeset publish",
    "release:dry-run": "semantic-release --dry-run",
    "benchmark": "bun run benchmarks/bun-vs-node-benchmark.js",
    "benchmark:node": "node benchmarks/node-vs-bun-benchmark.js",
    "changeset": "bunx changeset",
    "version": "bunx changeset version"
  },
  "keywords": [
    "workflow",
    "automation",
    "orchestration",
    "typescript",
    "rust",
    "bun",
    "webhooks",
    "cron"
  ],
  "author": {
    "name": "Mohamed Ali Ben Othmen"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dali-benothmen/cronflow.git"
  },
  "bugs": {
    "url": "https://github.com/dali-benothmen/cronflow/issues"
  },
  "homepage": "https://github.com/dali-benothmen/cronflow#readme",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "node-cron": "^4.2.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@napi-rs/cli": "^3.0.0",
    "@rollup/rollup-linux-x64-gnu": "^4.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "bundle-analyzer": "^0.0.6",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "semantic-release": "^23.0.0",
    "tar": "^7.4.3",
    "typescript": "^5.3.0",
    "vitepress": "^1.6.3",
    "vitest": "^2.0.0",
    "vue": "^3.5.18",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "bun": {
    "module": "src/index.ts",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  }
}
